<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/listViewItemHomeRelativeLayout" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/listViewItemHomeSellLoadProductTV"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:hint="Product" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/listViewItemHomeSellLoadNumberTV"
                android:layout_below="@+id/listViewItemHomeSellLoadProductTV"
                android:layout_alignParentStart="true"
                android:hint="Number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/listViewItemHomeSellLoadDatetimeTV"
                android:hint="Date"
                android:paddingTop="1.8dp"
                android:layout_alignTop="@+id/listViewItemHomeSellLoadNumberTV"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="false"
                android:layout_marginTop="2.8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/listViewItemHomeSellLoadBalanceTV"
                android:hint="Balance"
                android:foregroundGravity="right"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="5dp"
                android:textSize="12dp"
                android:textIsSelectable="false"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/listViewItemHomeSellLoadAmountTV"
                android:hint="Amount"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:paddingTop="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/listViewItemHomeSellLoadPaidIV"
                android:src="@drawable/my_paid"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:background="@color/colorRed"
                android:paddingTop="3dp"
                android:paddingBottom="2dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/listViewItemHomeSellLoadInfoIV"
                android:layout_marginTop="1dp"
                android:src="@drawable/my_info"
                android:background="@color/colorRed"
                android:paddingTop="3.5dp"
                android:paddingBottom="3.5dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>